<Window x:Class="Brakenator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brakenator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="main_frame" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden"/>
        <Button x:Name="page1Button" Click="page1Button_Click" Grid.Row="1" Content="Page 1"/>
        <Button x:Name="page2Button" Click="page2Button_Click" Grid.Row="1" Grid.Column="1" Content="Page 2"/>
    </Grid>
</Window>

